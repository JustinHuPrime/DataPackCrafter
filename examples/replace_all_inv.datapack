datapack replace_all_inv

# Number -> String
define replaceSlot(slot) {
    "item replace @s inventory.{slot} with apple 1"
}

# Number -> (list String)
define replaceSlots(slot) {
    if slot == 0 then {
        [replaceSlot(0)]
    } else {
        [replaceSlot(slot)] + replaceSlots(slot - 1)
    }
}

on(inventory_changed{}) {
    replaceSlots(9)
}
