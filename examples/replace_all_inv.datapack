datapack replace_all_inv

define replaceSlot(slot) {
    run "item replace @s inventory.{slot} with apple 1"
}

define replaceSlots(slot) {
    if slot == 0
    then replaceSlot(slot)
    else {
        replaceSlot(slot)
        replaceSlots(slot - 1)
    }
}

on(inventory_changed{}) {
    replaceSlots(9)
}
